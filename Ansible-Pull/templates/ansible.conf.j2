[defaults]
inventory = {{ home }}/hosts.yml
library = /usr/share/my_modules/
module_utils = /usr/share/my_module_utils/
remote_tmp = /tmp
local_tmp = /tmp
forks = 10
transport = smart
remote_port = 22
gathering = smart
roles_path = {{ home }}/roles
host_key_checking = False
remote_user = sysconfmgr
log_path = {{ home }}/logs/ansible.log
private_role_vars = yes
private_key_file = {{ home }}/.ssh/id_ansible
vault_password_file = {{ home }}/.vault_pass
strategy = free

[inventory]


[privilege_escalation]
become = True
become_method = sudo
become_user = root
become_ask_pass = False


[paramiko_connection]
record_host_keys=False
look_for_keys = False
host_key_auto_add = True


[ssh_connection]
pipelining = True


[persistent_connection]
connect_timeout = 30
command_timeout = 30
[accelerate]


[selinux]
special_context_filesystems=nfs,vboxsf,fuse,ramfs,9p


[colors]
highlight = white
verbose = blue
warn = bright purple
error = red
debug = dark gray
deprecate = purple
skip = cyan
unreachable = red
ok = green
changed = yellow
diff_add = green
diff_remove = red
diff_lines = cyan


[diff]
always = yes
context = 1000